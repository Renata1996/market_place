<!DOCTYPE web-app PUBLIC
        "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd" >


<web-app  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" id="WebApp_ID" version="2.5">

  <welcome-file-list>
    <welcome-file>showItems</welcome-file>
    <welcome-file>index</welcome-file>
  </welcome-file-list>

  <servlet>
    <servlet-name>servlets.LoginServlet</servlet-name>
    <servlet-class>servlets.LoginServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>servlets.LoginServlet</servlet-name>
    <url-pattern>/index</url-pattern>
  </servlet-mapping>


  <servlet>
    <servlet-name>servlets.RegistrationServlet</servlet-name>
    <servlet-class>servlets.RegistrationServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>servlets.RegistrationServlet</servlet-name>
    <url-pattern>/registration</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>servlets.ShowItemsServlet</servlet-name>
    <servlet-class>servlets.ShowItemsServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>servlets.ShowItemsServlet</servlet-name>
    <url-pattern>/showItems</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>servlets.MyItemsServlet</servlet-name>
    <servlet-class>servlets.MyItemsServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>servlets.MyItemsServlet</servlet-name>
    <url-pattern>/myItems</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>servlets.EditItemServlet</servlet-name>
    <servlet-class>servlets.EditItemServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>servlets.EditItemServlet</servlet-name>
    <url-pattern>/editItem</url-pattern>
  </servlet-mapping>

</web-app>